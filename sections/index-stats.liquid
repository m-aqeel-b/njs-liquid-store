{{ 'index-stats.css' | asset_url | stylesheet_tag }}
<div class="hb_stats">
  <div class="hb_main_container">
    <div class="hb_wrapper">
      {% for block in section.blocks %}
        <div class="hb_stats__item">
          {{ block.settings.custom_svg }}
          <p class="hb_stats-p1">{{ block.settings.figure }}</p>
          <p class="hb_stats-p2">{{ block.settings.name }}</p>
        </div>
      {% endfor %}


    </div>
  </div>
</div>
{% schema %}
  {
    "name": "index stats",
    "settings": [],
    "blocks": [
      {
        "type": "block",
        "name": "Stats List",
        "settings": [
          {
            "type": "text",
            "id": "name",
            "label": "Name"
          }, {
            "type": "text",
            "id": "figure",
            "label": "Figure"
          }, {
            "type": "textarea",
            "id": "custom_svg",
            "label": "SVG Code",
            "info": "Paste your svg code here"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "index stats"
      }
    ]
  }
{% endschema %}