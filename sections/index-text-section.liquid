{{ 'index-text-section.css' | asset_url | stylesheet_tag }}

<div class="hb_text">
  <div class="hb_main_container">
    <div class="hb_wrapper">
      <h2 class="hb_text_title">
        {{ section.settings.heading }}
      </h2>
      <p class="hb_text_p">
        {{ section.settings.description }}
      </p>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Index Text Section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }, {
        "type": "text",
        "id": "description",
        "label": "Description"
      }
    ],
    "presets": [
      {
        "name": "Index Text Section"
      }
    ]
  }
{% endschema %}