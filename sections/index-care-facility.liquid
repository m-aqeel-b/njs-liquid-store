{{ 'index-care-facility.css' | asset_url | stylesheet_tag }}
<div class="hb_care_facility">
  <div class="hb_main_container">
    <div class="hb_wrapper">
      {% for block in section.blocks %}
        <div class="hb_care_facility_item">
          {{ block.settings.custom_svg }}
          <h2 class="hb_care_facility_h2">
            {{ block.settings.title }}
          </h2>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Index Care Facility",
    "settings": [],
    "blocks": [
      {
        "type": "block",
        "name": "SVG list",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          }, {
            "type": "textarea",
            "id": "custom_svg",
            "label": "SVG Code",
            "info": "Paste your svg code here"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Index Care Facility"
      }
    ]
  }
{% endschema %}