{{ 'index-banner.css' | asset_url | stylesheet_tag }}
<div class="hb_hero_section">
  <img src="{{ section.settings.hero_bg_img | image_url: width: "2000x" }}" alt="" />
  <div class="hb_main_container">
    <div class="hb_hero_section_overly">
      <h1 class="hb_hero_overly_title">
        {{ section.settings.heading }}
      </h1>
      <p class="hb_hero_overly_p">
        {{ section.settings.description }}
      </p>
    </div>
  </div>

  <div class="hb_hero_verticle_text">{{ section.settings.verticle_text }}</div>
</div>
{% schema %}
  {
    "name": "Index Hero Section",
    "settings": [
      {
        "type": "image_picker",
        "id": "hero_bg_img",
        "label": "Hero Baground Image"
      }, {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }, {
        "type": "text",
        "id": "description",
        "label": "Description"
      }, {
        "type": "text",
        "id": "verticle_text",
        "label": "Verticle Text"
      }
    ],
    "presets": [
      {
        "name": "Index Hero Section"
      }
    ]
  }
{% endschema %}