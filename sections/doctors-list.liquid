{{ 'doctors-list.css' | asset_url | stylesheet_tag }}
<div class="hb_doctors">
  <div class="hb_main_container">
    <h2 class="hb_doctors_heading">
      {{ section.settings.title }}
    </h2>
    <div class="hb_wrapper">
      {% for block in section.blocks %}
        <div class="hb_doctors--item">
          <div class="hb_doctors--img"></div>
          <h3 class="hb_doctor--name">{{ block.settings.name }}</h3>
          <h4 class="hb_doctor--spcialization">
            {{ block.settings.speciality | newline_to_br }}
          </h4>
        </div>
      {% endfor %}


    </div>
  </div>
</div>
{% schema %}
  {
    "name": "doctors list",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      }
    ],
    "blocks": [
      {
        "type": "block",
        "name": "doctor list",
        "settings": [
          {
            "type": "text",
            "id": "name",
            "label": "Name"
          }, {
            "type": "textarea",
            "id": "speciality",
            "label": "Speciality"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "doctors list"
      }
    ]
  }
{% endschema %}